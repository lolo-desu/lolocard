{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "世界": {
      "type": "object",
      "properties": {
        "当前星期": {
          "type": "string"
        },
        "当前日期": {
          "type": "string"
        },
        "当前时间阶段": {
          "default": 1,
          "type": "number"
        },
        "下次响应界面选择判断": {
          "default": 0,
          "anyOf": [
            {
              "type": "number",
              "const": 0
            },
            {
              "type": "number",
              "const": 1
            },
            {
              "type": "number",
              "const": 2
            },
            {
              "type": "number",
              "const": 3
            }
          ]
        },
        "当前主线事件ID": {
          "default": "无",
          "type": "string"
        },
        "当前主线事件阶段": {
          "default": 0,
          "type": "number"
        },
        "当前主线故事大纲": {
          "default": "无",
          "type": "string"
        },
        "主线事件冷却计数": {
          "default": 0,
          "type": "number"
        }
      },
      "required": [
        "当前星期",
        "当前日期"
      ]
    },
    "络络": {
      "type": "object",
      "properties": {
        "亲密度": {
          "type": "number"
        },
        "阅读日记数量": {
          "type": "integer",
          "minimum": 0,
          "maximum": 9007199254740991
        },
        "拥有联系方式": {
          "type": "boolean"
        }
      },
      "required": [
        "亲密度",
        "阅读日记数量"
      ]
    }
  },
  "required": [
    "世界",
    "络络"
  ]
}