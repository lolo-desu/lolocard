{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "世界": {
      "type": "object",
      "properties": {
        "当前时间": {
          "type": "string",
          "pattern": "^-?\\d+(?:\\.\\d+)?:-?\\d+(?:\\.\\d+)?$"
        },
        "_当前时间阶段": {
          "type": "string",
          "enum": [
            "凌晨",
            "早晨",
            "上午",
            "中午",
            "下午",
            "晚上",
            "深夜"
          ]
        },
        "当前日期": {
          "type": "string"
        },
        "当前星期": {
          "type": "string",
          "pattern": "^(星期)(一|二|三|四|五|六|日)$"
        },
        "是否需要上学": {
          "default": true,
          "type": "boolean"
        },
        "是否处于NSFW场景": {
          "type": "boolean"
        },
        "下一回合界面选择": {
          "default": "纯文字尾附立绘",
          "type": "string",
          "enum": [
            "纯文字尾附立绘",
            "展示日记",
            "galgame"
          ]
        }
      },
      "required": [
        "当前时间",
        "当前日期",
        "当前星期"
      ]
    },
    "主线事件": {
      "default": {
        "当前状态": "无法触发"
      },
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "当前状态": {
              "type": "string",
              "const": "无法触发"
            }
          },
          "required": [
            "当前状态"
          ]
        },
        {
          "type": "object",
          "properties": {
            "当前状态": {
              "type": "string",
              "const": "冷却中"
            },
            "剩余冷却回合数": {
              "default": 20,
              "type": "number",
              "minimum": 0
            }
          },
          "required": [
            "当前状态"
          ]
        },
        {
          "type": "object",
          "properties": {
            "当前状态": {
              "type": "string",
              "const": "进行中"
            },
            "当前阶段": {
              "default": "引入",
              "type": "string",
              "enum": [
                "引入",
                "发展",
                "高潮",
                "结局"
              ]
            },
            "主题": {
              "type": "string"
            },
            "描述": {
              "type": "string"
            },
            "大纲": {
              "type": "object",
              "properties": {
                "引入": {
                  "type": "string"
                },
                "发展": {
                  "type": "string"
                },
                "高潮": {
                  "type": "string"
                },
                "结局": {
                  "type": "string"
                }
              },
              "required": [
                "引入",
                "发展",
                "高潮",
                "结局"
              ]
            }
          },
          "required": [
            "当前状态",
            "主题",
            "描述",
            "大纲"
          ]
        }
      ]
    },
    "络络": {
      "type": "object",
      "properties": {
        "亲密度": {
          "type": "number"
        },
        "阅读日记数量": {
          "type": "number",
          "minimum": 0
        },
        "拥有联系方式": {
          "type": "boolean"
        }
      },
      "required": [
        "亲密度"
      ]
    }
  },
  "required": [
    "世界",
    "络络"
  ]
}